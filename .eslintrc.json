{
	"extends": [
        "eslint:recommended"
    ],
	"ecmaFeatures": {
		"modules": true,
		"spread": true,
		"restParams": true
	},
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		"no-unused-vars": 0,
		"no-undef": 2,
		"no-var": 0,
		"indent": ["error", 4],
		"linebreak-style": "off",
		"semi": ["error", "always"]
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	}
}

